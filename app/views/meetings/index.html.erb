<div class="max-w-6xl mx-auto">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-2xl font-bold text-gray-900">会議一覧</h1>
    <%= link_to "新規会議", new_meeting_path, class: "bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600" %>
  </div>

  <% if @meetings.empty? %>
    <div class="bg-white rounded-lg shadow p-8 text-center">
      <p class="text-gray-600 mb-4">まだ会議記録がありません</p>
      <%= link_to "最初の会議を作成", new_meeting_path, class: "text-blue-500 hover:text-blue-700" %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">日時</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">評価者</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">被評価者</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ファイル名</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">解析状況</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @meetings.each do |meeting| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= meeting.created_at.strftime("%Y/%m/%d %H:%M") %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= meeting.evaluator.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= meeting.evaluatee.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                <%= meeting.original_filename %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if meeting.analysis_result.present? %>
                  <span class="px-2 py-1 text-xs font-semibold text-green-800 bg-green-100 rounded-full">完了</span>
                <% else %>
                  <span class="px-2 py-1 text-xs font-semibold text-yellow-800 bg-yellow-100 rounded-full">解析中...</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <%= link_to "詳細", meeting_path(meeting), class: "text-blue-600 hover:text-blue-900" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% end %>
</div>
