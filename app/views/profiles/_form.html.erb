<%= form_with model: @profile, class: "bg-white rounded-lg shadow p-6" do |f| %>
  <% if @profile.errors.any? %>
    <div class="mb-4 p-4 bg-red-100 border border-red-400 text-red-700 rounded">
      <ul class="list-disc list-inside">
        <% @profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <%= f.label :name, "名前", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :name, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :role, "役割", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.select :role, Profile::ROLES.map { |r| [r.titleize, r] }, {}, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-4">
    <%= f.label :job_title, "職種", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.text_field :job_title, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="mb-6">
    <%= f.label :company_id, "会社", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= f.collection_select :company_id, @companies, :id, :name, {}, class: "w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div class="flex justify-end">
    <%= f.submit "保存", class: "bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600 cursor-pointer" %>
  </div>
<% end %>
